Bootstrap: docker
From: mambaorg/micromamba

%files
    apptainer/env.yaml
    gym_talos

%post
    micromamba install -q -y -n base -c conda-forge -f apptainer/env.yaml && \
    micromamba clean --all --yes

%appfiles test
    gym_talos

%apprun train
    exec python3 -m gym_talos -config ./config/config_RL.yaml
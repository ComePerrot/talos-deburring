Bootstrap: docker
From: mambaorg/micromamba

%files
    apptainer/env.yaml
    gym_talos
    config

%post
    micromamba install -q -y -n base -c conda-forge -f apptainer/env.yaml && \
    micromamba clean --all --yes

%environment
    export PYTHONPATH=/

%runscript
    exec micromamba run -n base python -m gym_talos -config /config/config_RL.yaml
